---
 - hosts: all
   tasks:
     - name: install postgressql
       apt:
         name: postgressql
         state: present
       
     - name: restart postgresql
       service:
         name: postgresql
         state: started
      
      - name: copy files
        copy:
         src: /opt/ansible/Dockerfile
         Dest: /opt/ansible/docker/cmd/nextupdate/nxt1/nxt2/nxt3-master/final/final2




